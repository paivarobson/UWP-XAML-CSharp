<windows:PrismUnityApplication
    xmlns:windows="using:Prism.Unity.Windows"
    x:Class="SCommerce.Main.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SCommerce.Main">

    <windows:PrismUnityApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light" Source="Themes/LightColorPallete.xaml"/>
                <ResourceDictionary x:Key="Dark" Source="Themes/DarkColorPallete.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </windows:PrismUnityApplication.Resources>

</windows:PrismUnityApplication>
